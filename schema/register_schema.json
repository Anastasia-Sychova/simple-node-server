{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "login_schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "first_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "last_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 256
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 72
    }
  },
  "required": [
    "first_name",
    "last_name",
    "email",
    "password"
  ]
}
